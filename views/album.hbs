    <div class="insert_form">
        <h2>Add/Insert Album</h2>
        <form action="/submit_album" method="post">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" required>
    
            <label for="genre">Genre:</label>
            <input type="text" id="genre" name="genre" required>
    
            <label for="release_date">Release Date:</label>
            <input type="date" id="release_date" name="release_date" required>
    
            <label for="price">Price:</label>
            <input type="number" id="price" name="price" step="0.01" required>

            <label for="artist">Artist (FK):</label>
            <input type="text" id="artist" name="artist" required>
    
            <input type="submit" value="Submit">
        </form>
    </div>


    <div class="insert_form">
        <h2>Updating Album</h2>
        <form id="update-album-form-ajax">

            <label for="update">Album ID</label>
            <input type="number" id="update-ID" name="update-ID" required>

            <label for="title">Title:</label>
            <input type="text" id="title" name="title" required>
    
            <label for="genre">Genre:</label>
            <input type="text" id="genre" name="genre" required>
    
            <label for="release_date">Release Date:</label>
            <input type="date" id="release_date" name="release_date" required>
    
            <label for="price">Price:</label>
